@model SignInViewModel

@{
    ViewData["Title"] = "SignIn";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr-TR">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap</title>
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <main>
        <section id="login">
            <div id="login-title">
                <h1>Giriş Yap</h1>
            </div>
            <form id="login-form" asp-controller="Auth" asp-action="SignIn" method="post">
                <div class="login-control">
                    <label for="email" asp-for="Email">E Posta</label>
                    <input id="email" asp-for="Email" type="text" placeholder="E Posta Giriniz">
                </div>
                <div class="login-control">
                    <label for="password" asp-for="Password">Parola</label>
                    <input id="password" asp-for="Password" type="password" placeholder="Parola Giriniz">
                </div>
                <button id="login-submit">Giriş Yap</button>
            </form>
        </section>
    </main>
</body>
</html>